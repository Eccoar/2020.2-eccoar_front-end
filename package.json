{
	"name": "2020.2-eccoar_front-end",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@testing-library/jest-dom": "^5.11.9",
		"@testing-library/react": "^11.2.5",
		"@testing-library/user-event": "^12.8.1",
		"@types/jest": "^26.0.20",
		"@types/jwt-decode": "^3.1.0",
		"@types/node": "^12.20.4",
		"@types/react": "^17.0.2",
		"@types/react-dom": "^17.0.1",
		"axios": "^0.21.1",
		"jwt-decode": "^3.1.2",
		"leaflet": "^1.7.1",
		"node-sass": "^5.0.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-icons": "^4.2.0",
		"react-leaflet": "^3.1.0",
		"react-number-format": "^4.5.5",
		"react-router-dom": "^5.2.0",
		"react-scripts": "4.0.3",
		"typescript": "^4.2.2",
		"web-vitals": "^1.1.0",
		"workbox-background-sync": "^5.1.3",
		"workbox-broadcast-update": "^5.1.3",
		"workbox-cacheable-response": "^5.1.3",
		"workbox-core": "^5.1.3",
		"workbox-expiration": "^5.1.3",
		"workbox-google-analytics": "^5.1.3",
		"workbox-navigation-preload": "^5.1.3",
		"workbox-precaching": "^5.1.3",
		"workbox-range-requests": "^5.1.3",
		"workbox-routing": "^5.1.3",
		"workbox-strategies": "^5.1.3",
		"workbox-streams": "^5.1.3"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "CI=true react-scripts test --silent --env=jsdom --coverage --testResultsProcessor jest-sonar-reporter",
		"eject": "react-scripts eject",
		"start-sw": "http-server ./build -c-1",
		"lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
		"check-types": "tsc",
		"prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
		"format": "npm run prettier -- --write",
		"check-format": "npm run prettier -- --list-different",
		"validate": "npm-run-all --parallel check-types check-format lint",
		"sonar": "node sonar-project.js"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"lint-staged": {
		"*.+(js|ts|tsx)": [
			"eslint"
		],
		"**/*.+(js|json|ts|tsx)": [
			"prettier --write",
			"git add"
		],
		"*.--write": "prettier --write"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run validate && lint-staged"
		}
	},
	"devDependencies": {
		"@types/leaflet": "^1.7.0",
		"@types/react-router-dom": "^5.1.7",
		"@typescript-eslint/eslint-plugin": "^4.16.1",
		"@typescript-eslint/parser": "^4.16.1",
		"dotenv": "^8.2.0",
		"eslint-config-prettier": "^8.1.0",
		"http-server": "^0.12.3",
		"husky": "^4.3.8",
		"jest-sonar-reporter": "^2.0.0",
		"lint-staged": "^10.5.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"sonarqube-scanner": "^2.8.0"
	},
	"jestSonar": {
		"reportPath": "reports",
		"reportFile": "test-report.xml",
		"indent": 4
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,ts,tsx}",
			"<rootDir>/node_modules",
			"<rootDir>/build",
			"!src/index.tsx",
			"!src/reportWebVitals.ts",
			"!src/service-worker.ts",
			"!src/serviceWorkerRegistration.ts",
			"!src/services/flagr.ts",
			"!src/context/theme.tsx"
		]
	}
}
